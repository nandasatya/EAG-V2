{
  "manifest_version": 3,
  "name": "AI Twitter Feed",
  "version": "1.0",
  "description": "Shows latest tweets from Karpathy, Altman, and Suleyman.",
  "permissions": [
    "alarms",
    "storage"
  ],
  "host_permissions": [
    "https://api.twitter.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Twitter Feed"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}