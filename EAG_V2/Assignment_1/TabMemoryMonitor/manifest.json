{
    "manifest_version": 3,
    "name": "Tab Memory Monitor",
    "version": "1.0.0",
    "description": "See memory usage per tab, color-coded high/low, and close tabs from the popup.",
    "action": {
      "default_title": "Tab Memory Monitor",
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "permissions": [
      "tabs",
      "windows",
      "storage",
      "debugger"
    ],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "service_worker.js"
    },
    "minimum_chrome_version": "116",
    "author": "You"
  }
  